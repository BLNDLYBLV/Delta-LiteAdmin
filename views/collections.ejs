<%- include('partials/header') %>
    <div class="container">
        <form action="/databases" method="GET">
            <button>back</button>
        </form>
        <div class="databasebox">
            <% for(var i=0;i<c.length;i++){ %>
                <form  class="databaseele" action="/docs/<%= c[i].name %>/<%= dbname %>" method="GET">
                    <button style="border: none;width: 100%;text-align: left;">
                        <%= c[i].name %>
                    </button> 
                </form>
                <form action="/cdelete/<%= dbname %>/<%= c[i].name %>" method="POST" style="display: inline-block;">
                    <button class="fa fa-trash-alt"> 
                    </button>
                </form>
                <hr style="margin: 0;">
            <% } %>
        </div>
        <button onclick="addmodalon()" style="float: right;background-color: rgb(19,163,81);color: white;">Add Collection </button>
        <div class="modalback" id="addmodal">
            <div class="addmodal" >
                <div style="padding: 20px;">Add Collection</div>
                <hr style="margin: 0%;">
                <div style="margin-left: 30px; margin-top: 20px;padding: 20px;width: max-content;">
                    <form action="/adddb" method="POST">
                        <div style="display: none;" >Database name</div>
                        <input style="display: none;" value="<%= dbname %>" type="text" name="dbname">
                        <div>Collection name</div>
                        <input type="text" name="cname">
                        <button style="display: block;float: right;margin-top: 50px;position: relative;right: 50px;">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        function addmodalon(){
            console.log('works');
            var modal=document.getElementById('addmodal');
            // console.log(modal);
            modal.style.display='block';
        }
        window.addEventListener('click',(e)=>{
            if(e.target.id=='addmodal'){
                var modal=document.getElementById('addmodal');
            // console.log(modal);
            modal.style.display='none';
            }
        });
    </script>
<%- include('partials/footer') %>
